.banner {
  width: 690rpx;/* 设置轮播的高和宽 */
  height: 690rpx;
  background-position: 690rpx 0;
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
  position: relative;
  margin:0 auto;/* 让轮播居中 */
}
.banner .banner-bg-box {
  height: 100%;
  position: absolute;
  top: 0;
  left: 690rpx;
  -webkit-transition: none;
  transition: none;
}
.banner .banner-bg-box.Trans {
  -webkit-transition: all 1s;
  transition: all 1s;
}
.banner .banner-bg-box .banner-bg {
  width: 690rpx;
  height: 100%;
  float: left;
}
.banner .dots {
  position: absolute;
  left: 50%;
  bottom: 0rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.banner .dots text {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background: #ccc;
  margin: 0 5rpx;
  border-radius: 50%;
}
.banner .dots text.active {
  background: #bce672;
}

